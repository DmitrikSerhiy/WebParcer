@model WebParcer.Models.UnparcedUrlModel
@{
    ViewData["Title"] = "Home Page";
}

<h4>Enter urls</h4>

<div class="row">
    <form asp-action="Titles">
        <div class="form-group row fieldWidth">
            <div class="col-lg-10">
                <input id="urlInput" class="form-control" placeholder="url" />
            </div>
            <div class="col-lg-2">
                <input id="addUrl" type="button" name="AddUrl" value="Add" class="btn btn-default" />
            </div>
        </div>
        <div class="input-group row fieldWidth">
            <div class="col-lg-10">
                <div class="input-group-prepend">
                    <span class="input-group-text">URLS</span>
                </div>
                <textarea asp-for="Urls" id="Urls" class="form-control" style="height: 160px;" aria-label="URLS"></textarea>
            </div>
            <div class="col-lg-2 areaDivChild">
                <input id="clearArea" type="button" name="ClearTextArea" value="Clear" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group buttonM" style="padding-left: 15px;">
            <input id="sub" type="submit" class="btn btn-default" />
        </div>
    </form>
</div>


<script>
    var b = document.getElementById("addUrl");
    var area = document.getElementById("Urls");
    var urlInput = document.getElementById("urlInput");
    var clearArea = document.getElementById("clearArea");
    var sub = document.getElementById("sub");

    clearArea.style.visibility = 'hidden';

    b.onclick = function () {
        if (urlInput.value !== "") {
            area.textContent += urlInput.value + "; \n";
            urlInput.value = "";
            clearArea.style.visibility = 'visible';
        }
    };

    clearArea.onclick = function () {
        area.textContent = "";
        clearArea.style.visibility = 'hidden';
    };
</script>
